{% extends 'base.html.twig' %}

{% block title 'All Pins | ' ~ parent() %}

{% block body %}
    <article>
        <h3>
            <a href=" {{path('home')}} ">Home</a>
        </h3>
    </article>
    <h1>{{pluralize(pins|length, 'Pin')}}</h1>
    <article>
        {% for pin in pins %}
        <h2>
            <a href=" {{path('show_pin', {id : pin.id} ) }} ">{{pin.title}}</a>
        </h2>
        <p>{{pin.description}}</p>
        {% endfor %}
    </article>
{% endblock %}
