{% extends 'layouts/base.html.twig' %}

{% block title 'All Pins | ' ~ parent() %}

{% block body %}
    <h1><a href=" {{path('home')}} " title="home">Pinterest</a> - | - [{{pluralize(pins|length, 'Pin')}}]</h1>
    <article>
        <h3>
            <a href=" {{path('create_pin')}} ">Add</a>
        </h3>
    </article>
    <article>
        {% for pin in pins %}
        <h2>
            <a href=" {{path('show_pin', {id : pin.id} ) }} ">{{pin.title}}</a>
        </h2>
        <p>{{pin.description}}</p>
        {% endfor %}
    </article>
{% endblock %}
